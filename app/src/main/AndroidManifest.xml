<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.customer.fade">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_circadian2"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_circadian2_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Fade">
        <activity android:name=".CustomPreferenceActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".Manual" />
        <activity android:name=".WakeUp"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.night.day"/>
        <activity android:name=".Sleep"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.night.day"/>
        <activity android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>